// http://eslint.org/docs/user-guide/configuring

// Comment AMD in environment if you don't use AMD/RequireJS based dependency injection
// Comment Babel ESLint parser if you don't use Babel to parse your Javascript
// Comment unneeded globals according to project requirements

{
  "env": {
    "amd": true,
    "browser": true
  },
  
  "parser": "babel-eslint",     // Babel ESLint parser (https://github.com/babel/babel-eslint)
  
  "globals":{
    
    "angular": false,   // AngularJS global (https://github.com/angular/angular.js)
    "vue": false,       // VueJS global (https://github.com/vuejs/vue)
    "moment": false,    // MomentJS global (https://github.com/moment/moment)
    "module": false,    // ES6 module export globals
    "Map": false,       // Global for Map (https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/Map)
    
    "require": false,   // Globals for AMD module Injection
    "define": false     // (https://github.com/requirejs/requirejs)
  },
  "rules": {
    "array-bracket-spacing": 2,
    "block-scoped-var": 2,
    "brace-style": 2,
    "comma-spacing": 2,
    "comma-style": 2,
    "computed-property-spacing": 2,
    "curly": [2, "multi-or-nest"],
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eol-last": 2,
    "eqeqeq": 2,
    "indent": [2, 2],
    "key-spacing": 2,
    "keyword-spacing": 2,
    "lines-around-comment": 2,
    "no-alert": 1,
    "no-array-constructor": 2,
    "no-debugger": 2,
    "no-else-return": 2,
    "no-eval": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-multiple-empty-lines": 2,
    "no-nested-ternary": 2,
    "no-redeclare": 2,
    "no-spaced-func": 2,
    "no-shadow": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-unexpected-multiline": 2,
    "no-unneeded-ternary": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "all", "argsIgnorePattern": "^_"}],
    "operator-linebreak": [2, "before"],
    "quotes": [2,"single"],
    "quote-props": 2,
    "semi": [ 2, "always"],
    "semi-spacing": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": [2, "never"],
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "space-unary-ops": [2, {"words": true, "nonwords": false}],
    "spaced-comment": 2,
    "wrap-regex": 2
  }
}
